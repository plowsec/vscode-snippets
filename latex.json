{
/*
	// Place your snippets for LaTeX here. Each snippet is defined under a snippet name and has a prefix, body and
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
	// same ids are connected.
	// Example:
	"Print to console": {
		"prefix": "log",
		"body": [
			"console.log('$1');",
			"$2"
		],
		"description": "Log output to console"
	}
*/

	"Insert fraction": {
		"prefix": "frac",
		"body": [
			"\\frac{$1}{$2}"
		],
		"description": "Insert fraction for math note taking"
	},

	"Insert half": {
		"prefix": "half",
		"body": [
			"\\frac{1$1}{2$2}$3"
		],
		"description": "Insert 1/2 fraction for math note taking"
	},

	"Insert omega": {
		"prefix": "omega",
		"body": [
			"\\omega"
		],
		"description": "Insert omega greek letter for math note taking"
	},

	"Insert epsilon": {
		"prefix": "epsilon",
		"body": [
			"\\varepsilon"
		],
		"description": "Insert epsilon greek letter for math note taking"
	},

	"Wrap note": {
		"prefix": "note",
		"body": [
			"\\begin{note}\n${TM_SELECTED_TEXT}\n\\end{note}"
		],
		"description": "Wrap selected text with custom note environnment"
	},

	"Insert section": {
		"prefix": "sec",
		"body": [
			"\\section{${1:$TM_CURRENT_LINE}}"
		],
		"description": "Insert or wrap selected text with section"
	},

	"Insert subsection": {
		"prefix": "subsec",
		"body": [
			"\\subsection{${1:$TM_CURRENT_LINE}}"
		],
		"description": "Insert or wrap selected text with subsection"
	},

	"Insert subsubsection": {
		"prefix": "sbsec",
		"body": [
			"\\subsubsection{${1:$TM_CURRENT_LINE}}"
		],
		"description": "Insert or wrap selected text with subsubsection"
	},

	"Insert paragraph": {
		"prefix": "para",
		"body": [
			"\\paragraph*{}\n$1"
		],
		"description": "Insert empty paragraph, no numerotation"
	},

	"Insert figure": {
		"prefix": "fig",
		"body": [
			"\\begin{figure}[H]\n\\centering\n\\includegraphics[width=\\textwidth]{$1}\n\\caption{$2}\n\\label{fig:$1}\n\\end{figure}\n$3"
		],
		"description": "Insert figure HERE (float package)"
	},

	"Insert begin": {
		"prefix": "beg",
		"body": [
			"\\begin{$1}\n\n\\end{$1}\n$2"
		],
		"description": "Insert begin/end "
	},

	"Insert itemize": {
		"prefix": "ite",
		"body": [
			"\\begin{itemize}\n    \\item $1\n\\end{itemize}\n$2"
		],
		"description": "Insert itemize environnment with one item"
	},

	"Insert enumerate": {
		"prefix": "enum",
		"body": [
			"\\begin{enumerate}\n    \\item $1\n\\end{enumerate}\n$2"
		],
		"description": "Insert enumerate environnment with one item"
	},

	"Insert tabular": {
		"prefix": "tab",
		"body": [
			"\\begin{center}",
			"{\\renewcommand{\\arraystretch}{1.5}% for the vertical padding",
		  	"\\begin{tabular}{${1:*{3}{l}}}",
			"\\hline",
			"\\emph{$2} & \\emph{$3} &\\emph{$4}\\\\\\",
			"\\hline",
			"${5: & &}\\\\\\",
			"\\bottomrule\\hline",
			"\\end{tabular}}",
			"\\end{center}"
		],
		"description": "Insert a table"
	},

	"Insert emph": {
		"prefix": "emph",
		"body": [
			"\\emph{$1}"
		],
		"description": "Insert emph"
	},

	"Insert bold": {
		"prefix": "bold",
		"body": [
			"\\textbf{$1}"
		],
		"description": "Insert bold"
	},

	"Insert rightarrow": {
		"prefix": "arrow",
		"body": [
			"\\rightarrow"
		],
		"description": "Insert rightarrow"
	},

	"Insert vector": {
		"prefix": "vec",
		"body": [
			"\\vec{$1}"
		],
		"description": "Insert vector"
	},

	"Insert matrix": {
		"prefix": "matrix",
		"body": [
			"\\begin{pmatrix}$1\\end{pmatrix}"
		],
		"description": "Insert matrix"
	},

	"Insert cases": {
		"prefix": "cases",
		"body": [
			"\\begin{cases}$1\\end{cases}"
		],
		"description": "Insert cases"
	},

	"Insert align star": {
		"prefix": "salign",
		"body": [
			"\\begin{align*}$1\\end{align*}"
		],
		"description": "Insert align*"
	},

	"Insert sum": {
		"prefix": "sum",
		"body": [
			"\\sum\\limits_{${1:k=0}}^{${2:n}} $2"
		],
		"description": "Insert sum"
	},

	"Insert integrale": {
		"prefix": "int",
		"body": [
			"\\int_{$1}^{$2}"
		],
		"description": "Insert integrale"
	},

	"Insert math": {
		"prefix": "math",
		"body": [
			"\\[\n$1\n\\]"
		],
		"description": "Insert math"
	}
}